<% @page_title = "GIA证书查询" %>

<%= render 'layouts/frontend/header' %>


<%= form_tag gia_certificate_path, class: "form-sign form-signup" do %>
    <div class="form-group">
        <p class="title">GIA证书查询</p>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon"></span>
            </span>
            <input type="text" name="gia_number" class="form-control" placeholder="证书编号" required>
        </div>
    </div>

    <button type="submit" class="btn btn-default btn-block" id="btn-signup">查询</button>
<% end %>

<% if @gia_infos.any? %>
    <div class="form-sign">
        <div class="form-group">
            <p class="title">GIA查询结果</p>
        </div>
        <% @gia_infos.each do |k, v| %>
          <div class="form-group">
              <div class="input-group">
                  <span class="input-group-addon">
                      <span><%= k %></span>
                  </span>
                  <%= v %>
              </div>
          </div>
        <% end %>
    </div>
<% end %>

