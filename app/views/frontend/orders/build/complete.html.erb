<% @page_title = "您已成功付款！"  %>

<%= render 'layouts/frontend/header' %>

<div class="page order-build">
    <div class="container">
        <div class="section section-order section-complete">
            <header>订单状态</header>
            <main class="row">
                <div class="col-md-6 success">
                    <h3>您已成功付款！</h3>
                    <p>
                        请在 24 我们将尽快为您发货。<br>
                        如有问题请致电客服 <b>400-880-6600</b>
                    </p>
                </div>
                <div class="col-md-6">
                    <h4>订单详情</h4>
                    <p>订单编号：<%= @order.number %></p>
                    <p>收货人：&nbsp;&nbsp;&nbsp;&nbsp;<%= @order.shipping_address.name %></p>
                    <p>联系电话：<%= @order.shipping_address.mobile %></p>
                    <p>收货信息：<%= "#{ChinaCity.get(@order.shipping_address.province)} #{ChinaCity.get(@order.shipping_address.city)} #{ChinaCity.get(@order.shipping_address.district)} #{@order.shipping_address.address}" %></p>
                </div>
            </main>
        </div>
    </div>
</div>

<%= render 'layouts/frontend/footer' %>
