= form_for @order, url: wizard_path, method: :put do |f|
  - if @order.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in @order.errors.full_messages
          %li= message
  .hr-line-dashed
  = f.fields_for :shipping_address, @order.shipping_address do |field|
    .form-group
      .city-group
        %select.city-select{name: "order[shipping_address_attributes][province]"}
          %option --省份--
          = options_for_select(ChinaCity.list)
        %select.city-select{name: "order[shipping_address_attributes][city]"}
          %option --城市--
        %select.city-select{name: "order[shipping_address_attributes][district]"}
          %option --地区--
    .form-group
      = field.text_field :address, class: 'form-control', placeholder: '详细地址'
    .form-group
      = field.text_field :zipcode, class: 'form-control', placeholder: '邮政编码'
    .form-group
      = field.text_field :mobile, autofocues: true, class: 'form-control', placeholder: '手机'
    .form-group
      = field.text_field :name, class: 'form-control', placeholder: '姓名'
    .form-group
      = field.text_field :phone_area_code, class: 'form-control', placeholder: '区号'
    .form-group
      = field.text_field :phone, class: 'form-control', placeholder: '电话号码'
    .form-group
      = field.text_field :phone_ext_code, class: 'form-control', placeholder: '分机号'

  = f.button
