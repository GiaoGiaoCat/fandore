= form_for @comment, url: line_item_comments_path(@line_item), method: :post do |f|
  .form-group
    = f.text_field :title, class: 'form-control', placeholder: 'title'
  .form-group
    = f.text_field :comment, class: 'form-control', placeholder: 'comment'
    = f.file_field :pictures, multiple: true, class: 'form-control', placeholder: 'picture urls'

  = f.button
