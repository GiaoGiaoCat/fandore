<form class="form-sign form-signin" action="<%= sign_in_path %>" accept-charset="UTF-8" method="post">
    <div class="form-group">
        <p class="title">账号登录</p>
    </div>

    <div class="form-group">
        <input type="text" name="user_login_form[username]" class="form-control" placeholder="手机号或邮箱">
    </div>

    <div class="form-group">
        <input type="password" name="user_login_form[password]" class="form-control" placeholder="密码">
    </div>

    <button type="submit" class="btn btn-default btn-block">立即登录</button>

    <div class="form-group links">
        <a href="<%= sign_up_path %>" class="link link-signup">注册账号</a>
        |
        <a href="<%= users_forget_password_path %>" class="link">忘记密码？</a>
    </div>
</form>
