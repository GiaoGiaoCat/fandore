= form_for(@sign_in, url: sign_in_path) do |f|
  .float-title-bar
    登录
    %span.t-eng LOGIN
  - if @sign_in.errors.any?
    .error_messages
      %ul
        - for message in @sign_in.errors.full_messages
          %li= message
  .login-form-wrap
    %ul.login-form-box
      %li
        %label.login-icon
          %i.iconfont.icon-user
        = f.text_field :username, autofocues: true, class: 'login-input input-test', placeholder: '手机号/邮箱'

      %li
        %label.login-icon
          %i.iconfont.icon-password
        = f.password_field :password, class: 'login-input input-test', placeholder: '密码'
    .login-btn
      = f.submit '登录', class: 'btn-big-block'
    .login-link
      = link_to '忘记密码', users_forget_password_path
      -# = link_to '创建账户', sign_up_path, class: 'btn btn-sm btn-white btn-block'
