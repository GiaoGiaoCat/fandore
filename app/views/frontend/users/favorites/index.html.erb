<% @page_title = "我的订单"  %>

<%= render 'layouts/frontend/header' %>

<div class="page user-center">
    <div class="container">
        <%= render partial: 'frontend/users/sidebar' %>

        <div class="user-center-main">
            <header>我的收藏</header>

            <main>
                <% if @favorites.size > 0 %>
                    <% @favorites.each do |f| %>
                        <div class="favorite">
                            <img src="<%= f.favable.master.images.first.picture.middle.url %>" class="favorite-image">
                            <p><%= link_to f.favable.name, product_path(f.favable) %></p>
                            <p class="favorite-title">
                                <%= f.favable.name %>
                            </p>
                            <p class="favorite-buttons">
                                加入购物车
                                取消收藏
                            </p>
                        </div>

                    <% end %>
                <% else %>
                    <div class="init">
                        <%= image_tag 'redesign/init-orders.png', size: "74x100" %>
                        <p class="init-content">您还没有任何收藏</p>
                    </div>
                <% end %>
            </main>
        </div>
    </div>
</div>

<%= render 'layouts/frontend/footer' %>
