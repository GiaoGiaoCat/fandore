<form class="form-sign form-signup" action="<%= sign_up_path %>" accept-charset="UTF-8" method="post" data-remote="true">
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <div class="form-group">
        <p class="title">注册账号</p>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-phone"></span>
            </span>
            <input type="text" name="user[mobile]" class="form-control" placeholder="手机号" required>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-exclamation-sign"></span>
            </span>
            <input type="text" name="user[verification_code]" class="form-control" placeholder="短信验证码" required>
            <span class="input-group-btn">
                <button class="btn btn-default btn-login-code" id="btn-login-code" type="button">获取验证码</button>
            </span>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
            </span>
            <input type="text" name="user[email]" class="form-control" placeholder="邮箱地址" required>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
            </span>
            <input type="password" name="user[password]" class="form-control" placeholder="请输入密码" required>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-ok-sign"></span>
            </span>
            <input type="password" name="user[password_confirmation]" class="form-control" placeholder="确认密码" required>
        </div>
    </div>

    <button type="submit" class="btn btn-default btn-block" id="btn-signup">注册</button>

    <div class="form-group links">
        <input type="checkbox" checked>
        我已阅并同意遵守
        <%= link_to '法律声明', statement_path, class: 'link-page' %>
        和
        <%= link_to '隐私条款', privacy_path, class: 'link-page' %>
    </div>

    <div class="form-group signin">
        如果您已拥有 VANDODO 账号，可点击此处
        <a href="<%= sign_in_path %>" class="link-signin">登录</a>
    </div>
</form>
