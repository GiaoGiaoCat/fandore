<form class="form-sign form-signup" action="<%= sign_up_path %>" accept-charset="UTF-8" method="post">
    <div class="form-group">
        <p class="title">注册账号</p>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-phone"></span>
            </span>
            <input type="text" name="user[mobile]" class="form-control" placeholder="手机号">
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-exclamation-sign"></span>
            </span>
            <input type="text" name="user[verification_code]" class="form-control" placeholder="短信验证码">
            <span class="input-group-btn">
                <button class="btn btn-default btn-login-code" type="button">获取验证码</button>
            </span>
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
            </span>
            <input type="text" name="user[email]" class="form-control" placeholder="邮箱地址">
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
            </span>
            <input type="text" name="user[password]" class="form-control" placeholder="请输入密码">
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-ok-sign"></span>
            </span>
            <input type="text" name="user[password_confirmation]" class="form-control" placeholder="确认密码">
        </div>
    </div>

    <button type="submit" class="btn btn-default btn-block">注册</button>

    <div class="form-group links">
        <input type="checkbox" checked>
        我已阅并同意遵守
        <a href="#" class="link-page" target="_blank">法律声明</a>
        和
        <a href="#" class="link-page" target="_blank">隐私条款</a>
    </div>

    <div class="form-group signin">
        如果您已拥有 VANDODO 账号，可点击此处
        <a href="<%= sign_up_path %>" class="link-signin">登录</a>
    </div>
</form>
