<%= render 'layouts/frontend/header' %>

<div class="sub-container">
    <div class="clearfloat">
        <%= render 'frontend/users/sidebar' %>

        <div class="sub-mainright">
            <div class="box-white min-h820">
                <div class="user-title-bar clearfloat">
                    <div class="t-left">增改收货地址</div>
                </div>
                <div class="padd30 clearfloat">

                    <%= link_to "创建新地址", new_users_address_path, {class: "btn-purple2 mr15 show-popup", "data-size" => "big"}%>
                    <span class="c-a0 font-s14">您已创建 2 个收货地址，最多可创建 10 个</span>
                    <div class="clearfloat">
                        <%@addresses.each do |address|%>
                            <div class="address-list">
                                <a href="" class="delete"><i class="iconfont icon-close01"></i></a>
                                <h3 class="address-tit">李小明大坪核心商圈
                                    <%if address.is_default%>
                                        <sup class="default-tag">默认地址</sup>
                                    <%end%>
                                </h3>
                                <ul>
                                    <li><span class="a-span">收货人： </span>
                                        <%=address.name%>
                                    </li>
                                    <li><span class="a-span">所在地区： </span>
                                        <%=address.district_name%>
                                    </li>
                                    <li><span class="a-span">地址： </span>
                                        <%=address.address%>
                                    </li>
                                    <li><span class="a-span">手机： </span>
                                        <%=address.mobile%>
                                    </li>
                                    <li><span class="a-span">固定电话： </span>
                                        <%=address.phone%>
                                    </li>
                                    <li><span class="a-span">电子邮箱： </span>46*****25@qq.com
                                    </li>
                                </ul>
                                <div class="address-tool">
                                    <%unless address.is_default%>
                                        <%= link_to "设为默认地址", users_address_path(id: address, user_address: {is_default: true}), method: :patch%>
                                    <%end%>
                                    <%=link_to '编辑', edit_users_address_path(address)%>
                                </div>
                            </div>
                        <%end%>
                     </div>
                </div>
            </div>
        </div>
    </div>

    <%= render 'layouts/frontend/footer' %>
</div>
