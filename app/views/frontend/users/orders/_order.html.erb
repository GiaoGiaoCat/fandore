<div class="order">
    <div class="title">
        订单号：<a href="<%= order_path(order) %>"><%= order.number %></a> <%= "试戴订单" if order.is_try_before_buy? %>

        <% if order.checkout? || order.processing? %>
            <%= link_to '立即下单', order_build_path(order, :address), class: 'btn btn-default btn-sm' %>
        <% elsif order.pending? %>
            <%= link_to '立即支付', order_build_path(order, :payment), class: 'btn btn-default btn-sm' %>
        <% elsif order.paid? %>
            <%= link_to '查看进度', '#', class: 'btn btn-default btn-sm' %>
        <% elsif order.delivered? %>
            <%= link_to '查看物流', '#', class: 'btn btn-default btn-sm' %>
        <% elsif order.completed? %>
            <%= link_to '发表评价', '#', class: 'btn btn-default btn-sm' %>
        <% end %>

        <span class="status"><%= I18n.t("views.orders.states.#{order.state}") %></span>
    </div>

    <div class="order-items-table">
        <table class="table">
            <tbody>
                <% order.line_items.rings.each_with_index do |item, i| %>
                    <tr>
                        <th width="100"><img width="100" height="56" src="<%= item.product.master.images.first.picture.mini.url rescue '' %>"></th>
                        <td class="name">
                          <%= item.name %>
                          <span><%= item.variant.options_text %> <%= show_properties(item) %> <%= show_diamond_info(item.diamond) %></span>
                        </td>
                        <td width="48"><%= item.quantity %></td>
                        <td width="100"><%= number_to_currency item.final_amount %></td>
                        <% if i == 0 %>
                            <td width="100" rowspan="<%= order.line_items.rings.size %>"><%= next_state_button(order) %></td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="order-price">
        <span class="total">商品：￥<%= order.total.to_i %></span>
        <span class="reduce">优惠：￥<%= order.adjustment_total.to_i %></span>
        <span class="price">订单：￥<%= order.item_total.to_i %></span>
        <a href="<%= order_path(order) %>" class="link-order-show">查看详情</a>
    </div>
</div>
