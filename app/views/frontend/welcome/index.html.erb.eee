	        </div>
	        <div class="swiper-slide cell-weixin">
	           	<%= image_tag "redesign/weixin.jpg" %>
	         </div>
		</div>
		<!-- Add Pagination -->
		<div class="swiper-pagination swiper-pagination-white"></div>
	</div>

	<div class="contain">
		<div class="main-promos">
			<ul>
				<li>
                    <a href="<%= products_path(taxon_name: '求婚钻戒')%>">
