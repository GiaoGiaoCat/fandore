%h2 产品详情

%hr

%h3= @product.name

- if current_user
  = button_to '收藏', product_favorites_path(@product), remote: true

= render :partial => 'properties'

%hr

%h3 变体
- @product.variants_including_master.each do |v|
  = form_tag line_items_path  do
    = select_tag 'variant_id', options_from_collection_for_select(@product.variants_including_master, 'id', 'id')
    = text_field_tag 'remark', nil, placeholder: '填写留言'
    = submit_tag '加入购物车'

= link_to '购物车', cart_path(@cart)
