<%= form_tag line_items_path, id: 'add-to-cat', class: 'form-inline form-wedding-rings', data: { remote: true } do %>
    <h3 class="price" id="price"></h3>
    <p class="name"><%= @product.name %></p>

    <div class="form-group product-variants" data-toggle="buttons">
        <label class="btn btn-primary active">
            <input class="render-price" type="radio" name="variant_id" value="<%= @product.variants[0].id %>"
            data-price="<%= @product.variants[0].price %>" checked> 男女对戒
        </label>
        <label class="btn btn-primary">
            <input class="render-price" type="radio" name="variant_id" value="<%= @product.variants[1].id %>" data-price="<%= @product.variants[1].price %>"> 单男款
        </label>
        <label class="btn btn-primary">
            <input class="render-price" type="radio" name="variant_id" value="<%= @product.variants[1].id %>" data-price="<%= @product.variants[1].price %>"> 单女款
        </label>
    </div>

    <hr>

    <p class="description"><%= @product.description %></p>

    <hr>

    <div class="form-group product-information">
        <div class="row">
            <label for="product-size" class="col-sm-3 control-label"><b>选择手寸</b></label>
            <div class="col-sm-9">
                <a href="javascript:;" class="link-table" data-toggle="modal" data-target="#table">查看中国区戒指手寸对照表</a>
            </div>
        </div>

        <div class="row">
            <label for="product-size" class="col-sm-3 control-label">男款</label>
            <div class="col-sm-9">
                <select class="form-control" id="product-size" name="male_size">
                    <% (11..22).each do |index| %>
                        <option value="<%= index %>"><%= "#{ index }号" %></option>
                    <% end %>
                </select>
            </div>
        </div>

        <div class="row">
            <label for="product-size" class="col-sm-3 control-label">女款</label>
            <div class="col-sm-9">
                <select class="form-control" id="product-size" name="female_size">
                    <% (8..15).each do |index| %>
                        <option value="<%= index %>"><%= "#{ index }号" %></option>
                    <% end %>
                </select>
            </div>
        </div>

        <div class="row">
            <label for="lettering" class="col-sm-3 control-label"><b>刻字内容</b></label>
        </div>

        <div class="row">
            <label for="lettering" class="col-sm-3 control-label">男款</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="male_lettering" id="lettering" placeholder="4个汉字或8个字母">
            </div>
        </div>

        <div class="row">
            <label for="lettering" class="col-sm-3 control-label">女款</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="female_lettering" id="lettering" placeholder="4个汉字或8个字母">
            </div>
        </div>
    </div>

    <input type="hidden" id="diamond_id" name="diamond_id">

    <div class="form-buttons">
        <button type="submit" class="btn btn-default btn-lg btn-shopping">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            加入购物车
        </button>
        <a href="javascript:;" class="btn btn-default btn-lg btn-collect">加入收藏</a>
    </div>
<% end %>

<ul id="product-prices" style="display:none!important;">
    <% @product.variants.each do |variant| %>
        <li data-name="<%= variant.sku %>" id="<%= variant.id %>"><%= variant.price %></li>
    <% end %>
</ul>
