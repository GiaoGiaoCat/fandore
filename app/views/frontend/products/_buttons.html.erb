<div class="form-buttons">
    <button type="submit" class="btn btn-default btn-lg btn-shopping" data-disable-with="正在提交...">
        <span class="glyphicon glyphicon-shopping-cart"></span>
        加入购物车
    </button>
    <% if current_user.is_favorite? @product %>
        <a href="<%= favorite_path() %>" class="btn btn-default btn-lg btn-collect"
            data-remote="true" data-method="DELETE" data-disable-with="正在取消...">取消收藏</a>
    <% else %>
        <a href="<%= product_favorites_path(@product) %>" class="btn btn-default btn-lg btn-collect"
            data-remote="true" data-method="post" data-disable-with="正在提交...">加入收藏</a>
    <% end %>
</div>
