= simple_form_for([:admin, @promotion_category], :wrapper => :horizontal_form, html: { class: 'form-horizontal' }) do |f|
  = f.input :name
  .hr-line-dashed
  .form-group
    .col-sm-4.col-sm-offset-2
      = link_to 'Cancel', :back, class: 'btn btn-white'
      = f.submit class: 'btn btn-primary'
