= simple_form_for([:admin, @product, @variant], :wrapper => :horizontal_form, html: { class: 'form-horizontal' }) do |f|
  - @product.option_types.each do |option_type|
    .form-group
      %label.col-sm-2.control-label
        = option_type.presentation
      .col-sm-10
        = f.collection_select :option_value_ids, option_type.option_values, :id, :presentation, { prompt: true }, { name: 'product_variant[option_value_ids][]', class: 'select form-control' }
  = f.input :sku
  = f.input :price
  = f.input :position

  .hr-line-dashed
  .form-group
    .col-sm-4.col-sm-offset-2
      = link_to 'Cancel', :back, class: 'btn btn-white'
      = f.submit class: 'btn btn-primary'
