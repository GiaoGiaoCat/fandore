.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 商品管理
    %ol.breadcrumb
      %li
        = link_to '首页', admin_path
      %li.active
        %strong 属性管理
  .col-lg-2
.wrapper.wrapper-content
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5 原型列表
          .ibox-tools
            = link_to '添加原型', new_admin_prototype_path, class: 'btn btn-primary btn-xs'
        .ibox-content
          = render "layouts/flash_messages", flash: flash

          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th 原型名称
                  %th 添加时间
                  %th
              %tbody
                - @prototypes.each do |prototype|
                  %tr
                    %td= prototype.name
                    %td= prototype.created_at.to_s(:db)
                    %td
                      .btn-group
                        = link_to '编辑', edit_admin_prototype_path(prototype), class: 'btn btn-white btn-xs'
                        = link_to '删除', admin_prototype_path(prototype), method: :delete, class: 'btn btn-white btn-xs', data: { confirm: "确认删除?" }
