= simple_form_for([:admin, @comment], html: { class: 'form-horizontal' }) do |f|
  = f.input :title, wrapper: :horizontal_form
  = f.input :comment, wrapper: :horizontal_form

  .hr-line-dashed
  .form-group
    .col-sm-4.col-sm-offset-2
      = link_to 'Cancel', :back, class: 'btn btn-white'
      = f.submit class: 'btn btn-primary'
