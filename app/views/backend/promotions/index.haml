.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 优惠劵管理
    %ol.breadcrumb
      %li
        = link_to '首页', admin_path
      %li.active
        %strong 优惠劵
  .col-lg-2
.wrapper.wrapper-content
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5 优惠劵管理
          .ibox-tools
            = link_to '添加优惠劵', new_admin_promotion_path, class: 'btn btn-primary btn-xs'
        .ibox-content
          = render "layouts/flash_messages", flash: flash

          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th name
                  %th code
              %tbody
                - @promotions.each do |promotion|
                  %tr
                    %td= promotion.name
                    %td= promotion.code
                    %td
                      .btn-group
                        = link_to '编辑', edit_admin_promotion_path(promotion), class: 'btn btn-white btn-xs'
                        = link_to '删除', admin_promotion_path(promotion), method: :delete, class: 'btn btn-white btn-xs', data: { confirm: "确认删除?" }
