= simple_form_for([:admin, @action], url: url, html: { class: 'form-horizontal' }) do |f|
  = f.input :type_name
  = f.input :preferences
  %input{name: "promotion_promotion_action_id", value: @action.id, type: "hidden"}
  %input{name: "promotion_promotion_action[promotion_id]", value: @promotion.id, type: "hidden"}
  = f.submit "提交"
  = link_to '删除', admin_promotion_action_path(promotion_promotion_action_id: @action.id), method: :delete, data: { confirm: "确认删除?" }