.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 分类管理
    %ol.breadcrumb
      %li
        = link_to '首页', admin_path
      %li
        = link_to '分类管理', admin_taxonomies_path
      %li.active
        %strong 子类管理
  .col-lg-2
.wrapper.wrapper-content
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5 子类列表
          .ibox-tools
            = link_to '添加子类', new_admin_taxonomy_taxon_path(@taxonomy), class: 'btn btn-primary btn-xs'
        .ibox-content
          = render "layouts/flash_messages", flash: flash

          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th 子类名称
                  %th 添加时间
                  %th
              %tbody
                - @taxons.each do |taxon|
                  %tr
                    %td= taxon.name
                    %td= taxon.created_at.to_s(:db)
                    %td
                      .btn-group
                        = link_to '编辑', edit_admin_taxon_path(taxon), class: 'btn btn-white btn-xs'
                        - unless taxon.root?
                          = link_to '删除', admin_taxon_path(taxon), method: :delete, class: 'btn btn-white btn-xs', data: { confirm: "确认删除?" }
