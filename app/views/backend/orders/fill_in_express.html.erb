<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>填写快递单号</h2>
    <div class="ibox-content">
      <%= simple_form_for(:express, url: create_express_admin_order_path(@order), html: { class: 'form-horizontal' }) do |f| %>
        <%= f.input :company, wrapper: :horizontal_form, label: '快递公司' %>
        <%= f.input :number, wrapper: :horizontal_form, label: '快递单号' %>
        <%= f.submit "保存", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

