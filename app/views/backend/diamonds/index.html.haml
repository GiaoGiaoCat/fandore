.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 商品管理
    %ol.breadcrumb
      %li
        = link_to '首页', admin_path
      %li.active
        %strong 钻石管理
  .col-lg-2
.wrapper.wrapper-content
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5 钻石列表
          .ibox-tools
            = link_to '添加钻石', new_admin_diamond_path, class: 'btn btn-primary btn-xs'
        .ibox-content
          = render "layouts/flash_messages", flash: flash

          .table-responsive
            %table.table.table-striped
              %thead
                %tr
                  %th 钻石名称
                  %th 价格
                  %th 添加时间
                  %th
              %tbody
                - @products.each do |product|
                  %tr
                    %td= product.name
                    %td= number_to_currency product.price
                    %td= product.created_at.to_s(:db)
                    %td
                      .btn-group
                        = link_to '编辑', edit_admin_diamond_path(product), class: 'btn btn-white btn-xs'
                        = link_to '删除', admin_diamond_path(product), method: :delete, class: 'btn btn-white btn-xs', data: { confirm: "确认删除?" }
  = paginate @products
