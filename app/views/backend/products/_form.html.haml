= simple_form_for([:admin, @product], :wrapper => :horizontal_form, html: { class: 'form-horizontal' }) do |f|
  = f.input :name
  = f.input :description
  = f.input :spu

  .hr-line-dashed
  .form-group
    .col-sm-4.col-sm-offset-2
      = link_to 'Cancel', :back, class: 'btn btn-white'
      = f.submit class: 'btn btn-primary'
